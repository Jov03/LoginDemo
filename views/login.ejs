<!DOCTYPE html>
<html lang="en">

<head>
    <title>Vwngs Login</title>
    <meta charset="utf-8">
    <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--bootstrap css-->
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--custom css-->
    <link href="css/admin-style.css" rel="stylesheet" type="text/css">
    <!--google web fonts css-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Dosis:200,300,400,500,600,700,800' rel='stylesheet' type='text/css'>


</head>

<body>

    <div class="container">
    <%if(error&&error.length>0) {%>
        <div class="alert alert-danger">
            <%=error%>
        </div>
    <%}%>
    <%if(success&&success.length>0){%>
        <div class="alert alert-success">
            <%=success%>
        </div>
    <%}%>
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 col-xs-12">
                <div class="login-panel">
                    <img src="img/header-bg.jpg" alt="" />
                    <div class="logo">
                        <img class="img-responsive" src="img/logo.png" alt="" />
                    </div>
                    <div class="row login-content">
                        <form action="/login" method="post">
                            <div class="col-xs-12">
                                <input type="text" class="form-control" id="username" name="username" placeholder="username" required>
                            </div>
                            <div class="col-xs-12">
                                <input type="password" class="form-control" id="password" name="password" placeholder="password" required>
                            </div>
                            <p class="login-error"></p>
                            <button type="submit" class="btn btn-lg btn-primary col-xs-12">Login</button>
                            <a href='/signup' class="btn btn-lg btn-primary col-xs-12">Sign Up</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>